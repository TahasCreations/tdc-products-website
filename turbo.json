{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:migrate": {
      "dependsOn": ["prisma:generate"]
    },
    "db:seed": {
      "dependsOn": ["prisma:generate"]
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "pull": {
      "cache": false
    },
    "push": {
      "cache": false
    },
    "queue:drain": {
      "cache": false
    }
  }
}