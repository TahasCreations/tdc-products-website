{
  "name": "@tdc/config",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "clean": "rm -rf dist",
    "demo:env": "tsx src/demo/env-demo.ts",
    "validate:env": "tsx -e \"import { validateEnv } from './dist/environment/schema.js'; validateEnv();\""
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "typescript": "^5.3.3",
    "eslint": "^8.57.0",
    "vitest": "^1.0.0",
    "tsx": "^4.7.1"
  }
}
