    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-redux": "^9.0.0",
    "recharts": "^2.8.0",
    "redux": "^5.0.0",
    "redux-thunk": "^3.1.0",
    "reselect": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
