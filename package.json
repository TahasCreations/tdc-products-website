{
  "name": "tdc-products-website",
  "version": "1.0.0",
  "private": true,
  "description": "TDC Products - 3D Baskı Figürler ve Koleksiyon Ürünleri",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit --incremental",
    "clean": "rm -rf .next out",
    "deploy": "npm run build",
    "analyze": "set ANALYZE=true && npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build",
    "prebuild": "echo 'Starting build process...'",
    "postbuild": "echo 'Build completed successfully!'",
    "build:production": "NODE_ENV=production npm run build",
    "deploy:vercel": "vercel --prod",
    "setup:supabase": "node setup-supabase.js",
    "test:supabase": "node test-supabase-connection.js",
    "db:setup": "echo 'Supabase veritabanı kurulumu için SUPABASE-KURULUM-REHBERI.md dosyasını okuyun'",
    "clean:demo": "tsx scripts/clean-demo.ts",
    "seed": "tsx scripts/seed.ts",
    "seed:demo": "DEMO_MODE=true tsx scripts/seed.ts",
    "clean:all": "npm run clean:demo && npm run clean"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@heroicons/react": "^2.2.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.56.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "next": "14.2.5",
    "react": "18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "18.3.1",
    "recharts": "^3.1.2",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/date-fns": "^2.5.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
