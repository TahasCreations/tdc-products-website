  categories  String?  // JSON array
  languages   String?  // JSON array
  
  lastActiveAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([isOnline, isAvailable])
}

model CannedResponse {
