{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@tdc/domain": ["./packages/domain/src"],
      "@tdc/infra": ["./packages/infra/src"],
      "@tdc/ui": ["./packages/ui/src"],
      "@tdc/config": ["./packages/config/src"],
      "@tdc/contracts": ["./packages/contracts/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", "build", ".next"]
}